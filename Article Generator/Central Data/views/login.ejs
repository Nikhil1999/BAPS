<div class="valign-wrapper grey lighten-3" style="width:100%; height:100%; position: absolute">
    <div class="valign" style="width:100%;">
            <div class="container valign">
                <div class="row">
                    <div class="col s12 m10 l8 offset-m1 offset-l2">
                        <div class="card hoverable">
                            <form action="" method="post">
                                <div class="card-content">
                                    <span class="card-title center-align">
                                        <h3>Login</h3>
                                    </span>
                                    <div class="center-align">
                                        <% include ./partials/messages %>
                                    </div>
                                    <div class="input-field">
                                        <i class="material-icons prefix">email</i>
                                        <input type="email" id="email" name="email" required>
                                        <label for="email">Email</label>
                                    </div>
                                    <div class="input-field">
                                        <i class="material-icons prefix">lock</i>
                                        <input type="password" id="password" name="password" required>
                                        <label for="password">Password</label>
                                    </div>
                                    <a href="/forgot" class="amber-text text-darken-2">Forgot Password?</a>
                                    <p>Don't have an account? <a href="/register" class="amber-text text-darken-2">Register now</a></p>
                                </div>
                                <div class="card-action">
                                    <input type="submit" id="submit" name="submit" hidden>
                                    <a id="login" class="btn amber darken-2 waves-effect waves-light">Login<i class="material-icons right">arrow_forward</i></a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        $('#login').on('click', function(){
            $('#submit').trigger('click');
        });
    });
</script>