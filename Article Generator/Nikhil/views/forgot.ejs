<div class="valign-wrapper grey lighten-3" style="width:100%; height:100%; position: absolute;">
    <div class="valign" style="width:100%;">
        <div class="container">
            <div class="row">
                <div class="col s12 m10 l8 offset-m1 offset-l2">
                    <div class="card hoverable">
                        <form action="" method="post">
                            <div class="card-content center-align">
                                <span class="card-title center-align">
                                    <h3>Forgot Password</h3>
                                </span>
                                <div class="center-align">
                                    <% include ./partials/messages %>
                                </div>
                                <div class="input-field">
                                    <i class="material-icons prefix">email</i>
                                    <input type="email" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                                    <label for="email">Email</label>
                                </div>
                            </div>
                            <div class="card-action">
                                <input type="submit" id="submit" name="submit" hidden>
                                <a id="send_reset_password_link" class="btn amber darken-2 waves-effect waves-light">Send Reset Password Link<i class="material-icons right">arrow_forward</i></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        $('#send_reset_password_link').on('click', function(){
            $('#submit').trigger('click');
        });
    });
</script>